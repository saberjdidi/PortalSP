                            PickerWidth="200"
                            ShowColumnHeader="False"
                            WidthRequest="180">
                            <syncfusion:SfPicker.HeaderView>
                                <Entry
                                    x:Name="searchEntry"
                                    BackgroundColor="Green"
                                    TextChanged="searchEntry_TextChanged" />
                            </syncfusion:SfPicker.HeaderView>
                        </syncfusion:SfPicker>
                    </StackLayout>-->
                    <yummy:PancakeView
                        BackgroundColor="#00B2CA"
                        BorderThickness="1"
                        CornerRadius="25"
                        Elevation="3"
                        HeightRequest="50"
                        HorizontalOptions="CenterAndExpand"
                        WidthRequest="150">
                        <Button
                            BackgroundColor="Transparent"
                            Command="{Binding SaveRequest}"
                            HorizontalOptions="Center"
                            Text="{i18n:Translate Save}"
                            TextColor="White">
                            <Button.Triggers>
                                <MultiTrigger TargetType="Button">
                                    <MultiTrigger.Conditions>
                                        <BindingCondition Binding="{Binding Source={x:Reference ClientEntry}, Path=Text, Converter={StaticResource NotNullOrEmptyStringConverter}}" Value="True" />
                                        <BindingCondition Binding="{Binding Source={x:Reference RequestCatalogEntry}, Path=Text, Converter={StaticResource NotNullOrEmptyStringConverter}}" Value="True" />
                                    </MultiTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="{Binding IsEnabled, Mode=TwoWay}" />
                                </MultiTrigger>
                            </Button.Triggers>
                        </Button>
                    </yummy:PancakeView>
                </StackLayout>
            </yummy:PancakeView>
        </StackLayout>
    </ScrollView>
</pages:PopupPage>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid
            BackgroundColor="#246EB9"
            HorizontalOptions="FillAndExpand"
            RowSpacing="0"
            VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="45" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <custom:RoundedCornerView
                Grid.Row="1"
                Margin="25,0,25,0"
                BorderWidth="1"
                RoundedCornerRadius="25">
                <SearchBar
                    BackgroundColor="White"
                    HeightRequest="46"
                    IsVisible="{Binding ShowHide}"
                    Placeholder="{i18n:Translate Search}"
                    SearchCommand="{Binding SearchCommand}"
                    Text="{Binding Filter, Mode=TwoWay}" />
            </custom:RoundedCornerView>
            <Label
                Grid.Row="2"
                FontSize="24"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                IsVisible="{Binding IsVisibleStatus}"
                Text="{i18n:Translate NoResult}"
                TextColor="Black"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center" />
            <RefreshView
                Grid.Row="2"
                Command="{Binding RefreshCommand}"
                IsRefreshing="{Binding IsRefreshing}">
                <sync:SfListView
                    Grid.Row="1"
                    Margin="12,12,12,0"
                    AllowSwiping="True"
                    ItemSize="120"
                    ItemsSource="{Binding Antecedents}"
                    SelectionMode="None">
                    <sync:SfListView.LayoutManager>
                        <sync:LinearLayout />
                    </sync:SfListView.LayoutManager>
                    <sync:SfListView.LeftSwipeTemplate>
                        <DataTemplate>
                            <Grid BackgroundColor="{StaticResource BackgroundColor}" WidthRequest="120">
                                <BoxView Style="{StaticResource SwipeItemBorderStyle}" />
                                <Image Source="edit.png" Style="{StaticResource SwipeItemIconStyle}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer CommandParameter="{Binding id}" Tapped="Update_Antecedent" />
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </DataTemplate>
                    </sync:SfListView.LeftSwipeTemplate>
                    <sync:SfListView.RightSwipeTemplate>
                        <DataTemplate>
                            <Grid BackgroundColor="{StaticResource BackgroundColor}" WidthRequest="120">
                                <BoxView Style="{StaticResource SwipeItemBorderStyle}" />
                                <Image Source="trash.png" Style="{StaticResource SwipeItemIconStyle}">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding DeleteCommand}" />
                                    </Image.GestureRecognizers>
                                </Image>
                                <!--  <Label Style="{StaticResource SwipeItemTextStyle}" Text="Delete" />-->
                            </Grid>
                        </DataTemplate>
                    </sync:SfListView.RightSwipeTemplate>
                    <sync:SfListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Frame Style="{StaticResource FrameStyle}">
                                    <Grid RowSpacing="0" VerticalOptions="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource TierStyle}"
                                            Text="{Binding id}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource NameStyle}"
                                            Text="{Binding description}" />
                                    </Grid>
                                </Frame>
                                <ScrollView HorizontalOptions="End" IsEnabled="False">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="150"
                                        Source="bgImage"
                                        WidthRequest="150" />
                                </ScrollView>
                            </Grid>
                        </DataTemplate>
                    </sync:SfListView.ItemTemplate>
                </sync:SfListView>
            </RefreshView>
            <!--  menu items  -->
            <StackLayout
                x:Name="menuitems"
                Grid.Row="2"
                HorizontalOptions="End"
                InputTransparent="false"
                IsVisible="true"
                VerticalOptions="End">
                <StackLayout.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS">0,20,20,80</On>
                        <On Platform="Android">0,20,20,50</On>
                    </OnPlatform>
                </StackLayout.Margin>
                <!--  menu image  -->
                <Frame
                    Margin="0"
                    Padding="0"
                    BackgroundColor="Transparent"
                    CornerRadius="20"
                    HasShadow="False"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    WidthRequest="250">
                    <StackLayout>
                        <Frame
                            Margin="0"
                            Padding="0"
                            BackgroundColor="White"
                            HeightRequest="50"
                            HorizontalOptions="End"
                            WidthRequest="50">
                            <Frame.CornerRadius>
                                <OnPlatform x:TypeArguments="x:Single">
                                    <On Platform="iOS" Value="30" />
                                    <On Platform="Android" Value="40" />
                                </OnPlatform>
                            </Frame.CornerRadius>
                            <Image
                                x:Name="menu"
                                Margin="0,0,5,0"
                                HeightRequest="50"
                                HorizontalOptions="End"
                                Source="add_black.png"
                                WidthRequest=" 40">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Add_Antecedent" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>